<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingList.Controls.CategoryControl">

    <ContentView.ControlTemplate>
        <ControlTemplate>
            <Frame BackgroundColor="{Binding ColorHex}" Padding="10" CornerRadius="10">
                <VerticalStackLayout>
                    <Label Text="{TemplateBinding Title}" TextColor="White" FontSize="Large"/>
                    <ContentPresenter/>
                </VerticalStackLayout>
            </Frame>
        </ControlTemplate>
    </ContentView.ControlTemplate>

</ContentView>